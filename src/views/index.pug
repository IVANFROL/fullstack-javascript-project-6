extends partials/layout

block content
  .row.justify-content-center
    .col-lg-8
      .card.shadow-sm
        .card-body.text-center.py-5
          h1.display-4.mb-4 Welcome!
          if currentUser
            p.lead.text-muted Hello, #{currentUser.firstName} #{currentUser.lastName}!
            p.lead.text-muted This is a Fastify application with Bootstrap and server-side rendering using Pug templates and i18next for localization.
          else
            p.lead.text-muted This is a Fastify application with Bootstrap and server-side rendering using Pug templates and i18next for localization.
            hr.my-4
            .d-grid.gap-2.d-md-flex.justify-content-md-center
              a.btn.btn-primary.btn-lg.me-md-2(href='/session/new', role='button')
                i.bi.bi-box-arrow-in-right.me-2
                = t('common.signIn')
              a.btn.btn-outline-primary.btn-lg(href='/users/new', role='button')
                i.bi.bi-person-plus.me-2
                = t('common.signUp')
