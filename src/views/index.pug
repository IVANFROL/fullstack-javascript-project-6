extends partials/layout

block content
  .row.justify-content-center
    .col-lg-8
      .card.shadow-sm
        .card-body.text-center.py-5
          h1.display-4.mb-4= t('common.title') + '!'
          if currentUser
            p.lead.text-muted= t('common.welcomeMessage', { firstName: currentUser.firstName, lastName: currentUser.lastName })
            p.lead.text-muted= t('common.appDescription')
          else
            p.lead.text-muted= t('common.appDescription')
            hr.my-4
            .d-grid.gap-2.d-md-flex.justify-content-md-center
              a.btn.btn-primary.btn-lg.me-md-2(href='/session/new', role='button')
                i.bi.bi-box-arrow-in-right.me-2
                = t('common.signIn')
              a.btn.btn-outline-primary.btn-lg(href='/users/new', role='button')
                i.bi.bi-person-plus.me-2
                = t('common.signUp')
