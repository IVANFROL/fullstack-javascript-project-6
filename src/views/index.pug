doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN', crossorigin='anonymous')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css', rel='stylesheet')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container
        a.navbar-brand(href='/')
          i.bi.bi-house-door.me-2
          = title
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/login')
                i.bi.bi-box-arrow-in-right.me-1
                = t('common.signIn')
            li.nav-item
              a.nav-link(href='/signup')
                i.bi.bi-person-plus.me-1
                = t('common.signUp')
            li.nav-item
              a.nav-link(href='/users')
                i.bi.bi-people.me-1
                = t('common.users')
    
    main
      .container.my-5
        .row.justify-content-center
          .col-lg-8
            .card.shadow-sm
              .card-body.text-center.py-5
                h1.display-4.mb-4 Welcome!
                p.lead.text-muted This is a Fastify application with Bootstrap and server-side rendering using Pug templates and i18next for localization.
                hr.my-4
                .d-grid.gap-2.d-md-flex.justify-content-md-center
                  a.btn.btn-primary.btn-lg.me-md-2(href='/login', role='button')
                    i.bi.bi-box-arrow-in-right.me-2
                    = t('common.signIn')
                  a.btn.btn-outline-primary.btn-lg(href='/signup', role='button')
                    i.bi.bi-person-plus.me-2
                    = t('common.signUp')
    
    footer.bg-light.mt-auto.py-4
      .container.text-center
        p.text-muted.mb-0 &copy; 2024 Fullstack JavaScript Project 6
    
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+', crossorigin='anonymous')
