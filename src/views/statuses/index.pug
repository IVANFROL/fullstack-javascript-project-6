extends ../partials/layout

block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1 Statuses
    if currentUser
      a.btn.btn-primary(href='/statuses/new') New Status
  
  .table-responsive
    table.table.table-striped.table-hover
      thead
        tr
          th ID
          th Name
          if currentUser
            th Actions
      tbody
        each status in statuses
          tr
            td= status.id
            td= status.name
            if currentUser
              td
                a.btn.btn-sm.btn-outline-primary.me-2(href=`/statuses/${status.id}/edit`) Edit
                form(method='POST', action=`/statuses/${status.id}`, style='display: inline;')
                  input(type='hidden', name='_method', value='DELETE')
                  button.btn.btn-sm.btn-outline-danger(type='submit', onclick="return confirm('Are you sure?')") Delete
        if statuses.length === 0
          tr
            td(colspan=currentUser ? 3 : 2).text-center.text-muted No statuses yet
