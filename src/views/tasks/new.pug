extends ../partials/layout

block content
  .row.justify-content-center
    .col-md-8
      .card
        .card-header
          h3.mb-0 New Task
        .card-body
          form(method='POST', action='/tasks')
            .mb-3
              label.form-label(for='data_name') Name
              input#data_name.form-control(type='text', name='data[name]', required, minlength='1')
            .mb-3
              label.form-label(for='data_description') Description
              textarea#data_description.form-control(name='data[description]', rows='4')
            .mb-3
              label.form-label(for='data_statusId') Status
              select#data_statusId.form-select(name='data[statusId]', required)
                option(value='', selected, disabled) Select status
                each status in statuses
                  option(value=status.id)= status.name
            .mb-3
              label.form-label(for='data_executorId') Executor
              select#data_executorId.form-select(name='data[executorId]')
                option(value='', selected) No executor
                each user in users
                  option(value=user.id)= user.firstName + ' ' + user.lastName
            button.btn.btn-primary(type='submit') Create
            a.btn.btn-secondary.ms-2(href='/tasks') Cancel
