extends ../partials/layout

block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1= t('common.users')
    if currentUser
      a.btn.btn-primary(href=`/users/${currentUser.id}/edit`)= t('common.settings')
  
  .table-responsive
    table.table.table-striped.table-hover
      thead
        tr
          th= t('users.firstName')
          th= t('users.lastName')
          th= t('users.email')
      tbody
        each user in users
          tr
            td= user.firstName
            td= user.lastName
            td= user.email
