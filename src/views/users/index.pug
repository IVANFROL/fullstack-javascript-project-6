extends ../partials/layout

block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1 Users
    if currentUser
      a.btn.btn-primary(href=`/users/${currentUser.id}/edit`) Settings
  
  .table-responsive
    table.table.table-striped.table-hover
      thead
        tr
          th First Name
          th Last Name
          th Email
      tbody
        each user in users
          tr
            td= user.firstName
            td= user.lastName
            td= user.email
