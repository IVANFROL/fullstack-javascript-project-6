extends ../partials/layout

block content
  .row.justify-content-center
    .col-md-6
      .card
        .card-header
          h3.mb-0= t('common.signUp')
        .card-body
          form(method='POST', action='/users')
            .mb-3
              label.form-label(for='data_firstName')= t('users.firstName')
              input#data_firstName.form-control(type='text', name='data[firstName]', required, minlength='1')
            .mb-3
              label.form-label(for='data_lastName')= t('users.lastName')
              input#data_lastName.form-control(type='text', name='data[lastName]', required, minlength='1')
            .mb-3
              label.form-label(for='data_email')= t('users.email')
              input#data_email.form-control(type='email', name='data[email]', required)
            .mb-3
              label.form-label(for='data_password')= t('users.password')
              input#data_password.form-control(type='password', name='data[password]', required, minlength='3')
            button.btn.btn-primary(type='submit')= t('common.signUp')
